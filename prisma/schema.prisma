generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  jid      String @id
  name     String @db.Char(50)
  pronouns String @db.Char(10)

  agency   String?       @db.Char(50)
  followUp BotFollowUp[]

  vouchers Voucher[]

  createdAt DateTime @default(now())
}

model BotFollowUp {
  id  String @id @default(cuid())
  key String @db.Char(20)

  user   User   @relation(fields: [userId], references: [jid], onDelete: Cascade)
  userId String

  answer String?

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([key, userId])
}

model Event {
  id   String @id @default(cuid())
  slug String @unique @db.Char(15)
  name String @db.Char(50)
  key  String @db.Char(20)

  open Boolean @default(true)

  vouchers Voucher[]

  createdAt DateTime @default(now())
}

model Voucher {
  id      String @id @default(cuid())
  event   Event  @relation(fields: [eventId], references: [id])
  eventId String
  user    User   @relation(fields: [userId], references: [jid])
  userId  String
  code    String @unique @db.Char(20)

  redeemAt  DateTime?
  redeemBy  String?
  createdAt DateTime  @default(now())

  @@unique([eventId, userId])
}
